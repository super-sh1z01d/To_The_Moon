# Application
APP_ENV=dev
LOG_LEVEL=INFO
APP_NAME=to-the-moon
APP_VERSION=2.0.0

# HTTP Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+psycopg2://user:pass@localhost:5432/tothemoon

# Frontend
FRONTEND_DIST_PATH=frontend/dist

# Scheduler
SCHEDULER_ENABLED=true

# Scoring Model Configuration (optional - can be set via API)
# SCORING_MODEL_ACTIVE=hybrid_momentum
# W_TX=0.25
# W_VOL=0.25
# W_FRESH=0.25
# W_OI=0.25
# EWMA_ALPHA=0.3
# FRESHNESS_THRESHOLD_HOURS=6.0

# Data Filtering (optional)
# MIN_POOL_LIQUIDITY_USD=500
# MIN_SCORE_CHANGE=0.05

# Telegram Alerts (optional - for production monitoring)
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here
